{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "GEMINI_API_KEY": "@gemini_api_key",
    "USE_GEMINI_API": "true",
    "FALLBACK_TO_LOCAL": "true"
  },
  "functions": {
    "api/index.py": {
      "maxDuration": 60
    }
  }
}